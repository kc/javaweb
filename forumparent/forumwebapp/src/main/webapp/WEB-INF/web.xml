<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.example.servlets.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/my/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>RequestLog</filter-name>
        <filter-class>com.example.filters.RequestLogFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RegisterUser</filter-name>
        <filter-class>com.example.filters.RegisterUser</filter-class>
    </filter>
    <filter>
        <filter-name>ContactsCaching</filter-name>
        <filter-class>com.example.filters.CachingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestLog</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RegisterUser</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ContactsCaching</filter-name>
        <url-pattern>/contacts/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.example.listeners.ActiveUsersListener</listener-class>
    </listener>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>adminpages</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <login-config>
        <auth-method>DIGEST</auth-method>
<!--        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>-->
    </login-config>
</web-app>